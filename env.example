# Database
DATABASE_URL="postgresql://username:password@localhost:5432/finance_app"

# Next.js
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Signzy API Configuration
SIGNZY_BASE_URL="https://api.signzy.com"
SIGNZY_API_KEY="your_signzy_api_key"
SIGNZY_CLIENT_ID="your_signzy_client_id"
SIGNZY_CLIENT_SECRET="your_signzy_client_secret"
SIGNZY_WEBHOOK_URL="https://your-domain.com/api/webhooks/signzy"
SIGNZY_WEBHOOK_SECRET="your_webhook_secret"

# Signzy Feature Flags
SIGNZY_ENABLE_VIDEO_KYC="true"
SIGNZY_ENABLE_ACCOUNT_AGGREGATOR="true"
SIGNZY_ENABLE_BANK_STATEMENT_ANALYSIS="true"

# Development Settings
ENABLE_MOCK_DATA="true"
NODE_ENV="development"

# Razorpay Payment Gateway
RAZORPAY_KEY_ID="rzp_test_your_test_key"
RAZORPAY_KEY_SECRET="your_test_secret"
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret" 