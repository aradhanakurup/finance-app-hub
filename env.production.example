# Production Environment Variables for Vercel Deployment
# Copy this to .env.production and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Secret (generate a strong secret)
JWT_SECRET="your-super-secure-jwt-secret-here"

# Admin Credentials (use bcrypt hash for password)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH="$2b$10$your-bcrypt-hash-here"

# Razorpay (for payment processing)
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-secret"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Signzy (for KYC verification)
SIGNZY_API_KEY="your-signzy-api-key"
SIGNZY_API_SECRET="your-signzy-secret"

# Insurance Providers (API keys)
ICICI_LOMBARD_API_KEY="your-icici-api-key"
HDFC_ERGO_API_KEY="your-hdfc-api-key"
BAJAJ_ALLIANZ_API_KEY="your-bajaj-api-key"
TATA_AIG_API_KEY="your-tata-api-key"

# Application Settings
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
NEXT_PUBLIC_APP_NAME="Fin5"
NEXT_PUBLIC_APP_DESCRIPTION="Finance. Fast. Five minutes flat."

# Analytics (optional)
NEXT_PUBLIC_GA_ID="your-google-analytics-id"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn" 